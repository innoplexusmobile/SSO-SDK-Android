<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="homeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/color_transparent</item>
        <item name="colorAccent">@color/color_kplexus</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>

    </style>

    <style name="progress_map" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/color_kplexus</item>
        <item name="android:backgroundDimEnabled">false</item>

    </style>

</resources>
